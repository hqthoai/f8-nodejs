<div>
    <h3 class="mt-4">Update User</h3>
    <form class="mt-4" method="POST" action="/users/{{user._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value ="{{user.name}}" d="name" name="name">
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="phone" class="form-control" value ="{{user.phone}}" id="phone" name="phone">
        </div>

        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" value ="{{user.image}}" id="image" name="image">
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>