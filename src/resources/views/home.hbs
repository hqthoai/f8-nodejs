<div class="mt-4">
    <div class="row">
        {{#each cakes}}
        <div class="col-sm-6 col-lg-4 mb-4">
            <div class="card" >
                <a href="/cakes/{{this.slug}}">
                    <img class="card-img-top" src={{this.pictures}} alt={{this.name}}>
                </a>
                <div class="card-body">
                    <a href="/cakes/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.price}}</p>
                    <a href="#" class="btn btn-primary">Access</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


